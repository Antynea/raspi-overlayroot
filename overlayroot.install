post_install() {
  mkinitcpio --allpresets
  echo " > Please add 'overlayroot' to your HOOKS array in /etc/mkinitcpio.conf."
}

post_remove() {
  if grep overlayroot /etc/mkinitcpio.conf > /dev/null; then
    echo " > Please remove 'overlayroot' from your HOOKS array in /etc/mkinitcpio.conf."
  fi
}

post_upgrade() {
  mkinitcpio --allpresets
}
